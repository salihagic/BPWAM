@model TranslationDTO
@{ Layout = null; }

<div class="modal-header">
    <h5 class="modal-title">
        @Translations.Details
    </h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"></button>
</div>

<div class="modal-body">

    <div class="col-md-12 row">
        <div class="col-md-12 form-group">
            <label>@Translations.Key</label>
            <textarea disabled asp-for="Key" class="form-control m-input" placeholder="@Translations.Key"></textarea>
        </div>
        <div class="col-md-12 form-group">
            <label>@Translations.Language</label>
            <input value="@TranslationOptions.GetByCulture(Model.Culture)?.Name" class="form-control m-input" disabled>
        </div>
        <div class="col-md-12 form-group">
            <label>@Translations.Translation</label>
            <textarea disabled asp-for="Value" class="form-control m-input" placeholder="@Translations.Translation"></textarea>
        </div>
    </div>

</div>

<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">@Translations.Close</button>
</div>
