@{ Layout = null; }

<script>

    $(document).on('click', '.reset_password_button', function(e) {
        e.preventDefault();
        var url = $(this).attr('href');

        Swal.fire({
            title: '@Translations.Are_you_sure?',
            text: "@Html.Raw(Translations.Password_reset_link_will_be_sent_to_users_email)!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: '@Translations.Yes_reset_it!'
        }).then((result) => {

            if (result.value) {

                $.ajax({
                    url: url,
                    type: 'POST',
                    success: (data) => {
                        Swal.fire(
                            '@Translations.Sent!',
                            '@Translations.Password_reset_link_has_been_sent.',
                            'success'
                        );
                    }
                });

            }

        });
    });

</script>