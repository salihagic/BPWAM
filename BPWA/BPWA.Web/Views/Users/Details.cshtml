@model UserDTO
@{ Layout = null; }

<div class="modal-header">
    <h5 class="modal-title">
        @Translations.Details
    </h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"></button>
</div>

<div class="modal-body">

    <div class="col-md-12 row">
        <div class="col-md-6 form-group">
            <label>@Translations.User_name</label>
            <input asp-for="UserName" class="form-control m-input" disabled>
        </div>
        <div class="col-md-6 form-group">
            <label>@Translations.Email</label>
            <input asp-for="Email" class="form-control m-input" disabled>
        </div>
        <div class="col-md-6 form-group">
            <label>@Translations.First_name</label>
            <input asp-for="FirstName" class="form-control m-input" disabled>
        </div>
        <div class="col-md-6 form-group">
            <label>@Translations.Last_name</label>
            <input asp-for="LastName" class="form-control m-input" disabled>
        </div>
        <div class="col-md-12 form-group">
            <label>@Translations.City</label>
            <input asp-for="City.Name" class="form-control m-input" disabled>
        </div>
        @if (Model.UserRoles.IsNotEmpty())
        {
            <div class="col-md-12 row">
                <div class="col-md">
                    <label>@Translations.Roles</label>
                </div>
                <div class="col-md-6"></div>
                @foreach (var item in Model.UserRoles)
                {
                    <div class="col-md-6 form-group">
                        <input value="@item.Role.Name" class="form-control m-input" disabled>
                    </div>
                }
            </div>
        }
        @if (Model.CompanyUsers.IsNotEmpty())
        {
            <div class="col-md-12 row">
                <div class="col-md">
                    <label>@Translations.Companies</label>
                </div>
                <div class="col-md-6"></div>
                @foreach (var item in Model.CompanyUsers)
                {
                    <div class="col-md-6 form-group">
                        <input value="@item.Company.Name" class="form-control m-input" disabled>
                    </div>
                }
            </div>
        }       
        @if (Model.BusinessUnitUsers.IsNotEmpty())
        {
            <div class="col-md-12 row">
                <div class="col-md">
                    <label>@Translations.BusinessUnits</label>
                </div>
                <div class="col-md-6"></div>
                @foreach (var item in Model.BusinessUnitUsers)
                {
                    <div class="col-md-6 form-group">
                        <input value="@item.BusinessUnit.Name" class="form-control m-input" disabled>
                    </div>
                }
            </div>
        }
    </div>

</div>

<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">@Translations.Close</button>
</div>
