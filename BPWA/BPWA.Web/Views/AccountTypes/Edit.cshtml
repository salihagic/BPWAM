@model AccountTypeUpdateModel
@{ Layout = null; }

<form asp-controller="AccountTypes"
      asp-action="Edit"
      method="POST"
      class="kt-form kt-form--fit">

    <input type="hidden" asp-for="Id" />

    <div class="modal-header">
        <h5 class="modal-title">
            @Translations.Edit_account_type
        </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"></button>
    </div>

    <div class="modal-body">

        <div class="col-md-12 row">
            <div class="col-md-12 form-group">
                <label>@Translations.System_account_type</label>
                <input asp-for="SystemAccountType" class="form-control m-input" disabled>
            </div>

            <div class="col-md-12 form-group">
                <label>@Translations.Duration</label>
                <input asp-for="Duration" class="form-control m-input" placeholder="@Translations.Duration">
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
        </div>

    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">@Translations.Close</button>
        <button class="modal_submit_close_button btn btn-primary" type="button">@Translations.Save</button>
    </div>

</form>

<script>

    Select2SystemAccountTypes({
        element: '#modal_@nameof(AccountTypeUpdateModel.SystemAccountType)',
        selectedItem: '@Html.Raw(Model.SystemAccountType.GetDropdownItemJson())'
    });

</script>