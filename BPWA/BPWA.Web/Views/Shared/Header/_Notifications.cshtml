        <form>
            <!--begin: Head -->
            <div class="kt-head kt-head--skin-dark kt-head--fit-x kt-head--fit-b" style="background-image: url(../assets/media/misc/bg-1.jpg)">
                <h3 class="kt-head__title">
                    Notifications
                    &nbsp;
                    <span id="notifications_count_wrapper" class="btn btn-success btn-sm btn-bold btn-font-md"><span id="notifications_count"></span> <span>new</span></span>
                </h3>
                <ul class="nav nav-tabs nav-tabs-line nav-tabs-bold nav-tabs-line-3x nav-tabs-line-success kt-notification-item-padding-x" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active show" data-toggle="tab" href="#topbar_notifications_notifications" role="tab" aria-selected="true">Direct</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#topbar_notifications_events" role="tab" aria-selected="false">Groups</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#topbar_notifications_logs" role="tab" aria-selected="false">Broadcast</a>
                    </li>
                </ul>
            </div>

            <!--end: Head -->
            <div class="tab-content">
                <div class="tab-pane active show" id="topbar_notifications_notifications" role="tabpanel">
                    <div id="direct_notifications" class="kt-notification kt-margin-t-10 kt-margin-b-10 kt-scroll ps ps--active-y" data-scroll="true" data-height="300" data-mobile-height="200" style="height: 300px; overflow: hidden;"></div>
                </div>
                <div class="tab-pane" id="topbar_notifications_events" role="tabpanel">
                    <div id="group_notifications" class="kt-notification kt-margin-t-10 kt-margin-b-10 kt-scroll ps ps--active-y" data-scroll="true" data-height="300" data-mobile-height="200" style="height: 300px; overflow: hidden;"></div>
                </div>
                <div class="tab-pane" id="topbar_notifications_logs" role="tabpanel">
                    <div id="broadcast_notifications" class="kt-notification kt-margin-t-10 kt-margin-b-10 kt-scroll ps ps--active-y" data-scroll="true" data-height="300" data-mobile-height="200" style="height: 300px; overflow: hidden;"></div>
                </div>
            </div>
        </form>
    </div>
</div>

<script>

    var directNotificationsSkip = 0;
    var directNotificationsTake = 5;
    var groupNotificationsSkip = 0;
    var groupNotificationsTake = 5;
    var broadcastNotificationsSkip = 0;
    var broadcastNotificationsTake = 5;

    LoadNotificationsCount();

    $('#notification_pulse_item').on('click', function (e) {
        directNotificationsSkip = 0;
        directNotificationsTake = 5;
        groupNotificationsSkip = 0;
        groupNotificationsTake = 5;
        broadcastNotificationsSkip = 0;
        broadcastNotificationsTake = 5;

        $('#direct_notifications').html('');
        $('#group_notifications').html('');
        $('#broadcast_notifications').html('');

        LoadNotificationsCount();
        LoadDirectNotifications();
        LoadGroupNotifications();
        LoadBroadcastNotifications();
    });

    $('#direct_notifications').on('scroll', function () {
        if ($(this).scrollTop() + $(this).innerHeight() >= $(this)[0].scrollHeight) {
            directNotificationsSkip += directNotificationsTake;
            LoadDirectNotifications();
        }
    });
    
    $('#group_notifications').on('scroll', function () {
        if ($(this).scrollTop() + $(this).innerHeight() >= $(this)[0].scrollHeight) {
            groupNotificationsSkip += groupNotificationsTake;
            LoadGroupNotifications();
        }
    });
    
    $('#broadcast_notifications').on('scroll', function () {
        if ($(this).scrollTop() + $(this).innerHeight() >= $(this)[0].scrollHeight) {
            broadcastNotificationsSkip += broadcastNotificationsTake;
            LoadGroupNotifications();
        }
    });

    function LoadNotificationsCount() {
        $.ajax({
            url: '@Url.Action("GetUnseenNotificationsCountForCurrentUser", "Notifications")',
            type: 'GET',
            success: (count) => {
                if (count != undefined && count > 0) {
                    $('#notification_pulse_item').addClass('kt-pulse kt-pulse--brand');
                    $('#notifications_count_wrapper').show();
                    $('#notifications_count').html(count);
                } else {
                    $('#notification_pulse_item').removeClass('kt-pulse kt-pulse--brand');
                    $('#notifications_count_wrapper').hide();
                }
            }
        });
    }

    function LoadDirectNotifications() {
        $.ajax({
            url: '@Url.Action("GetDirect", "Notifications")',
            type: 'POST',
            data: {
                'pagination': {
                    'skip': directNotificationsSkip,
                    'take': directNotificationsTake
                }
            },
            success: (notifications) => {
                $.each(notifications, function (index, notification) {
                    $('#direct_notifications').append(BuildNotificationItem(notification));
                });
            }
        });
    }

    function LoadGroupNotifications() {
        $.ajax({
            url: '@Url.Action("GetGroup", "Notifications")',
            type: 'POST',
            data: {
                'pagination': {
                    'skip': groupNotificationsSkip,
                    'take': groupNotificationsTake
                }
            },
            success: (notifications) => {
                $.each(notifications, function (index, notification) {
                    $('#group_notifications').append(BuildNotificationItem(notification));
                });
            }
        });
    }

    function LoadBroadcastNotifications() {
        $.ajax({
            url: '@Url.Action("GetBroadcast", "Notifications")',
            type: 'POST',
            data: {
                'pagination': {
                    'skip': broadcastNotificationsSkip,
                    'take': broadcastNotificationsTake
                }
            },
            success: (notifications) => {
                $.each(notifications, function (index, notification) {
                    $('#broadcast_notifications').append(BuildNotificationItem(notification));
                });
            }
        });
    }

    function BuildNotificationItem(notification) {
        return `<a href="#" class="kt-notification__item ${notification.seen ? 'kt-notification__item--read' : ''}">
                    <div class="kt-notification__item-icon">
                        <i class="flaticon-alert kt-font-success"></i>
                    </div>
                    <div class="kt-notification__item-details">
                        <div class="kt-notification__item-title">
                            ${notification.title}
                        </div>
                        <div class="kt-notification__item-time">
                            <div>${notification.description}</div>
                            <div>${notification.createdAtString}</div>
                        </div>
                    </div>
                </a>`;
    }

</script>