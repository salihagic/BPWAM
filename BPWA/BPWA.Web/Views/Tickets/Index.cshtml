<script>

    $(document).ready(function() {

        Select2AjaxCountries({
            element: '#@nameof(TicketSearchModel.CountryId)',
        });

        DatatableAjax({
            element: '.datatable',
            url: '@Url.Action("IndexJson", "Tickets")',
            searchFormElement: '.datatable_search_form',
            columns: [
                {
                    field: '@nameof(TicketDTO.Name).ToCamelCase()',
                    title: '@Translations.Name',
                },
                {
                    field: '@nameof(TicketDTO.Country).ToCamelCase().@nameof(TicketDTO.Country.Name).ToCamelCase()',
                    title: '@Translations.Country',
                },
                {
                    template: (row) => DatatableBasicActions({
                        detailsUrl: `@Url.Action("Details", "Tickets")/${row.id}`,
                        editUrl: `@Url.Action("Edit", "Tickets")/${row.id}`,
